.recipe(data-recipe-id='#{recipe._id}')
  .photo(style='background-image:url(#{recipe.photo});background-size:cover;')
    button.remove.delete x
  div= recipe.name
  .category= recipe.category
  ul
    each ingredient in recipe.ingredients
      li: a.ingredient(href='#')= ingredient
  ol
    each direction in recipe.directions
      li= direction

